//TO FIND NUMBER OF OCCURENCES IN ARRAY//
#include<stdio.h>
    int countOccurences(int a[], int size, int target) {
        int count=0,i=0;
        for(i=0;i<size;i++)
        { if(a[i]==target)
        { count++;
        } 
        }
        return count;
    }
    int main() {
        int a[]={1,1,2,2,2,2,3};
        int size=sizeof(a)/sizeof(a[0]);
        int target=2;
        int occurences=countOccurences(a,size,target);
        printf("the number %d occurs %d times in the array/n",target,occurences);
        return 0;
    }
